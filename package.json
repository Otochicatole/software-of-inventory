{
  "name": "Etheon-Management",
  "version": "0.1.0",
  "private": true,
  "main": "dist/electron/main.js",
  "author": {
    "name": "Otochi",
    "email": "your-email@example.com"
  },
  "description": "Etheon - Product Management System",
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:electron": "cross-env NODE_ENV=development concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "next build && node scripts/post-build.js && node scripts/create-seed-db.js",
    "build:electron": "tsc -p electron/tsconfig.json",
    "build:all": "npm run build && npm run build:electron",
    "start": "next start",
    "electron": "electron .",
    "pack": "npm run build:all && electron-builder --dir && node scripts/apply-icon.js",
    "dist": "npm run build:all && electron-builder",
    "dist:win": "npm run build:all && electron-builder --win --dir && node scripts/apply-icon.js && electron-builder build --win --prepackaged release/win-unpacked",
    "dist:mac": "npm run build:all && electron-builder --mac",
    "dist:linux": "npm run build:all && electron-builder --linux",
    "lint": "eslint",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@prisma/client": "6.19.0",
    "lucide-react": "0.546.0",
    "next": "15.5.5",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.3.1",
    "@types/node": "20.19.21",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "electron": "^33.4.11",
    "electron-builder": "^25.1.8",
    "eslint": "9.37.0",
    "eslint-config-next": "15.5.5",
    "png-to-ico": "^3.0.1",
    "prisma": "6.19.0",
    "rcedit": "^4.0.1",
    "typescript": "5.9.3",
    "wait-on": "^8.0.5"
  },
  "build": {
    "appId": "com.etheon.management",
    "productName": "Etheon - Management",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/electron/**/*",
      ".next/standalone/**/*",
      ".next/static/**/*",
      "public/**/*",
      "node_modules/@prisma/**/*",
      "node_modules/.prisma/**/*",
      "!node_modules/.prisma/client/libquery_engine-*",
      "node_modules/.prisma/client/libquery_engine-windows.dll.node"
    ],
    "asarUnpack": [
      "node_modules/@prisma/**/*",
      "node_modules/.prisma/**/*",
      ".next/standalone/**/*"
    ],
    "extraResources": [
      {
        "from": ".next/standalone",
        "to": "app",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "prisma",
        "to": "app/prisma",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/logo.ico",
      "signAndEditExecutable": false,
      "signingHashAlgorithms": []
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true,
      "installerIcon": "public/logo.ico",
      "uninstallerIcon": "public/logo.ico",
      "shortcutName": "Etheon",
      "license": false,
      "deleteAppDataOnUninstall": false,
      "differentialPackage": false
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.business"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office"
    }
  }
}